@using SalesOrdersApp.Models.ViewModels;
@model ChangePasswordViewModel
@{
	ViewBag.Title = "Change Password";
}
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<h1>Change Password</h1>

<form asp-action="ChangePassword" method="post">
	<div class="row mb-2">
		<label class="col-form-label col-md-2">Username:</label>
		<div class="col-md-4">
			<input asp-for="Username" class="form-control" readonly />
		</div>
		<div class="col">
			<span asp-validation-for="Username" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<label class="col-form-label col-md-2">Old Password:</label>
		<div class="col-md-4">
			<input asp-for="OldPassword" class="form-control" type="password" />
		</div>
		<div class="col">
			<span asp-validation-for="OldPassword" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<label class="col-form-label col-md-2">New Password:</label>
		<div class="col-md-4">
			<input asp-for="NewPassword" class="form-control" type="password" />
		</div>
		<div class="col">
			<span asp-validation-for="NewPassword" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<label class="col-form-label col-md-2">Confirm Password:</label>
		<div class="col-md-4">
			<input asp-for="ConfirmPassword" class="form-control" type="password" />
		</div>
		<div class="col">
			<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
		</div>
	</div>
	<div class="row mb-2">
		<div class="offset-2">
			<button type="submit" class="btn btn-primary">Change Password</button>
			<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Cancel</a>
		</div>
	</div>
</form>