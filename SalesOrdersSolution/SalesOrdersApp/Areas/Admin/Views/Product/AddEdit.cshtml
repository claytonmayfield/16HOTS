@* this view is used for the Add action and the Update (edit) action *@
@model Product
@{
    // sets title to "Add Product" or "Update Product"
    ViewBag.Title = ViewBag.Action + " Product";    
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/
                       jquery.validate.unobtrusive.min.js"></script>
}

<h1>@ViewBag.Title</h1>

<form asp-action="Update" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="CategoryID" class="form-label">Category</label>
        <select asp-for="CategoryID"
                asp-items="@(new SelectList(ViewBag.Categories,
                         "CategoryID", "CategoryName"))"
                class="form-select"></select>
    </div>

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label"></label>
        <input asp-for="ProductName" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="ProductDescShort" class="form-label"></label>
        <input asp-for="ProductDescShort" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="ProductDescLong" class="form-label"></label>
        <input asp-for="ProductDescLong" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="ProductImage" class="form-label"></label>
        <input asp-for="ProductImage" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="ProductPrice" class="form-label"></label>
        <input asp-for="ProductPrice" class="form-control">
    </div>

    <div class="mb-3">
        <label asp-for="ProductQty" class="form-label"></label>
        <input asp-for="ProductQty" class="form-control">
    </div>

    <input type="hidden" asp-for="ProductID" />

    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>
